{
	"name": "fs-likes-frontend",
	"version": "1.0.0",
	"description": "Frontend build tools for FS Likes WordPress plugin",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "webpack --mode=production",
		"build-dev": "webpack --mode=development",
		"watch": "webpack --watch --mode=development",
		"start": "webpack serve --mode=development",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:css": "stylelint \"styles/**/*.{css,scss}\"",
		"lint:css:fix": "stylelint \"styles/**/*.{css,scss}\" --fix",
		"lint:js": "eslint \"js/**/*.js\"",
		"lint:js:fix": "eslint \"js/**/*.js\" --fix",
		"format": "prettier --write \"**/*.{js,scss,css,json}\"",
		"format:check": "prettier --check \"**/*.{js,scss,css,json}\"",
		"clean": "rm -rf node_modules assets",
		"reinstall": "npm run clean && npm install",
		"update": "npx npm-check-updates -u && npm install"
	},
	"keywords": [
		"wordpress",
		"plugin",
		"frontend",
		"likes"
	],
	"author": "indigit",
	"license": "GPL-2.0-or-later",
	"devDependencies": {
		"@babel/core": "^7.26.10",
		"@babel/preset-env": "^7.26.9",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.25.1",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@wordpress/eslint-plugin": "^21.6.0",
		"@wordpress/stylelint-config": "^23.3.0",
		"babel-loader": "^10.0.0",
		"create-hash-file-webpack": "^1.0.4",
		"css-loader": "^7.1.2",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^16.0.0",
		"mini-css-extract-plugin": "^2.9.2",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"remove-files-webpack-plugin": "^1.5.0",
		"sass": "^1.87.0",
		"sass-loader": "^16.0.5",
		"stylelint": "^16.19.1",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-config-standard-scss": "^14.0.0",
		"stylelint-prettier": "^5.0.3",
		"stylelint-webpack-plugin": "^5.0.1",
		"webpack": "^5.99.7",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.1"
	}
}
